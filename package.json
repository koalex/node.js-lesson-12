{
	"name": "nodejs-websocket-chat",
	"version": "1.0.1",
	"description": "Node.js websocket chat",
	"scripts": {
		"bootstrap": "lerna bootstrap --ignore-prepublish --force-local --hoist=*",
		"test": "mocha ./test/*.js --recursive --exit",
		"loadtest": "artillery run ./test/loadtest.yml",
		"start": "cross-env NODE_ENV=production node server.js",
		"dev": "cross-env NODE_ENV=development node nodemon.js"
	},
	"engines": {
		"node": ">=10.10.0",
		"npm": ">=6"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm test",
			"pre-push": "npm test"
		}
	},
	"nodemonConfig": {
		"ignore": [
			"test/*",
			"logs/*",
			"*.pid"
		]
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"artillery": "^1.6.0-28",
		"async-busboy": "^0.7.0",
		"bunyan": "^1.8.12",
		"config": "^3.1.0",
		"cross-env": "^5.2.0",
		"dotenv": "^8.0.0",
		"jsonwebtoken": "^8.5.1",
		"keygrip": "^1.1.0",
		"koa": "^2.7.0",
		"koa-bodyparser": "^4.2.1",
		"koa-compose": "^4.1.0",
		"koa-conditional-get": "^2.0.0",
		"koa-etag": "^3.0.0",
		"koa-helmet": "^4.2.0",
		"koa-logger": "^3.2.0",
		"koa-response-time": "^2.1.0",
		"koa-static": "^5.0.0",
		"koa-useragent": "^1.2.1",
		"mongoose": "^5.5.15",
		"node-notifier": "^8.0.1",
		"nodemailer": "^6.2.1",
		"socket.io": "^2.2.0",
		"socket.io-redis": "^5.2.0",
		"uuid": "^3.3.2"
	},
	"devDependencies": {
		"husky": "^2.7.0",
		"lerna": "^3.15.0",
		"mocha": "^6.1.4",
		"ngrok": "^3.2.1",
		"nodemon": "^1.19.1",
		"supertest": "^4.0.2"
	}
}
